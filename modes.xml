<?xml version="1.0" encoding="UTF-8"?>
<modes>

  <mode name="zul-twol" install="no">
    <pipeline>
      <program name="hfst-strings2fst -S"/>
      <program name="hfst-compose-intersect">
        <file name=".deps/zul.twol.hfst"/>
      </program>
      <program name="hfst-fst2strings"/>
    </pipeline>
  </mode>

  <mode name="zul-morph" install="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="zul.automorf.bin"/>
      </program>
    </pipeline>
  </mode>


  <mode name="zul-lexd" install="no">
    <pipeline>
      <program name="hfst-lookup">
        <file name=".deps/zul.LR.lexd.hfst"/>
      </program>
    </pipeline>
  </mode>

  <mode name="zul-gener" install="yes">
    <pipeline>
      <program name="lt-proc -g">
        <file name="zul.autogen.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="zul-tagger" install="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="zul.automorf.bin"/>
      </program>
      <program name="cg-proc -w">
        <file name="zul.rlx.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="zul-disam" install="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="zul.automorf.bin"/>
      </program>
      <program name="cg-conv -a"/>
      <program name="vislcg3 --trace --grammar">
        <file name="zul.rlx.bin"/>
      </program>
    </pipeline>
  </mode>

</modes>

